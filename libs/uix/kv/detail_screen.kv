<DetailScreen>:
    id: main_win
    orientation: "vertical"

    FitImage:
        source: root.image
        adaptive_height: True
        adaptive_size: True

    ScrollView:
        MDBoxLayout:
            padding: 100, 50
            orientation: "vertical"
            spacing: 20
            adaptive_height: True

            MDLabel:
                text: f"{root.title} | {root.year}"
                bold: True
                font_style: "H5"
                adaptive_height: True
            MDLabel:
                font_style: "Body1"
                text: f"{root.runtime} minutes | {root.date_upload}"
                adaptive_height: True

            MDLabel:
                text: root.description
                font_style: "Body2"
                adaptive_height: True

            MDLabel:
                text: ""